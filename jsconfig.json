
{
  "compilerOptions": {
    "target": "es2020", // Or your preferred ECMAScript target (e.g., "esnext")
    "module": "commonjs", // Or "esnext" for ES modules
    "jsx": "react", // Enable JSX support
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Enable interop between CommonJS and ES modules
    "skipLibCheck": true, // Skip type checking for external libraries (optional)
    "baseUrl": ".", // Root directory for path resolution
    "paths": {
      "@/*": ["./"] // Alias for the root directory
    },
    "resolveJsonModule": true // Allow importing JSON files
  },
  "include": ["app/**/*", "pages/**/*", "components/**/*", "lib/**/*"], // Include source files
  "exclude": ["node_modules"] // Exclude node_modules
}